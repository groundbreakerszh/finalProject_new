<div class="container">
  <div class="row">
    <div class="col-xs-3"></div>
    <div class="col-xs-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h2>Sign Up</h2>
        </div>

        <div class="panel-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, :class => "form-control", :placeholder => "Add your e-mail address" %>
          </div>

          <div class="form-group">
            <%= f.label :name %><br />
            <%= f.text_field :name, :class => "form-control", :placeholder => "Add your name" %>
          </div>

          <div class="form-group">
            <%= f.label :year_of_birth, 'How old are you?' %><br />
            <%= f.text_field :year_of_birth, :class => "form-control", :placeholder => "Add your birthday" %>
          </div>

          <div class="form-group">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", :class => "form-control", :placeholder => "Add your password" %>

          </div>

          <div class="form-group">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control", :placeholder => "Confirm your password" %>
          </div>

          <div class="actions">
            <%= f.submit "Sign up", :class => "btn btn-primary" %>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>

<% end %>
