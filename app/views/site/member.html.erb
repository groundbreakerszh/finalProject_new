<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <h1><%= @user.name %></h1>
      <table class="table table-hover">
        <tbody>
          <tr>
            <th>User Number</th>
            <td><%= @user.id %></td>
          </tr>
          <tr>
            <th>Name</th>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <th>E-Mail</th>
            <td><%= @user.email %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <%= render template: 'hard_skills/show'  %>
    </div>
    <div class="col-md-12">
      <%= render template: 'soft_skills/show'  %>
    </div>
  </div>
</div>
